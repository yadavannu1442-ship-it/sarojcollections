    <script>
        // Simple scroll animation
        window.addEventListener('scroll', () => {
            const elements = document.querySelectorAll('.fade-in');
            elements.forEach(el => {
                const rect = el.getBoundingClientRect();
                if (rect.top < window.innerHeight) {
                    el.style.opacity = '1';
                }
            });
        });
    </script>
